/**index.wxss**/
page{
  box-sizing: border-box;
  color: #666;
  padding: 10rpx;
}
.nav_list{

}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid #f25d8e;
}
/* 轮播图 */
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}
/* 视频封面展示 */
.video_cover{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.video_item{
  width: 48%;
  overflow: hidden;
  
}
.video_img{
  position: relative;
  
}
.video_img image{
  width: 100%;
  border-radius: 14rpx;
}
.video_img .count_wrap{
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  display: flex;
  justify-content: space-around;
  color: #eee;
  font-size: 24rpx;
}
.video_desc{
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  
}
